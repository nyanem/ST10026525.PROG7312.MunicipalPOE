@model List<ST10026525.PROG7312.MunicipalPOE.Models.Report>
@if (ViewBag.Success != null)
{
    <div class="alert alert-success text-center">
        @ViewBag.Success
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Location</th>
            <th>Category</th>
            <th>Description</th>
            <th>Attachment</th>
            <th>Submitted At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Location</td>
                <td>@r.Category</td>
                <td>@r.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(r.MediaFileName))
                    {
                        <a href="@r.MediaFileName" target="_blank">View File</a>
                    }
                </td>
                <td>@r.SubmittedAt</td>
            </tr>
        }
    </tbody>
</table>
