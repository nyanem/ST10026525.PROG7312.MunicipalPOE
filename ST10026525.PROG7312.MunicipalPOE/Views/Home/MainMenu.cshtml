@{
    ViewData["Title"] = "Main Menu";
    ViewData["BodyClass"] = "menu-page";
}

<div class="menu-page-container">
    <h1 class="menu-page-title">Welcome to the Municipal Services Portal</h1>

    <div class="menu-grid">
        <!-- Report Issues -->
        <div class="menu-card" onclick="location.href='@Url.Action("ReportForm", "Report")'">
            <h3>Report Issues</h3>
            <p>Submit reports for municipal services.</p>
        </div>

        <!-- Local Events and Announcements -->
        <div class="menu-card" onclick="location.href='@Url.Action("Index", "Events")'">
            <h3>Local Events & Announcements</h3>
            <p>Stay updated with local events and news.</p>
        </div>


        <!-- Service Request Status -->
        <div class="menu-card" onclick="location.href='@Url.Action("ServiceRequestForm", "ServiceRequest")'">

            <h3>Service Request Status</h3>
            <p>Check the progress of submitted requests.</p>
        </div>
    </div>
</div>