@model List<ST10026525.PROG7312.MunicipalPOE.Models.ServiceRequest>

@{
    ViewData["Title"] = "Service Requests";
}
@section Styles {
    <link rel="stylesheet" href="~/css/ServiceRequest.css" />
}

<div class="container mt-5 py-4">
    <h2>Service Requests</h2>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <input type="text" name="searchId" class="form-control" placeholder="Search by ID" />
        </div>
        <div class="col-md-2">
            <select name="category" class="form-select">
                <option value="">All Categories</option>
                @foreach (var c in (IEnumerable<string>)ViewBag.Categories)
                {
                    <option value="@c">@c</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <select name="status" class="form-select">
                <option value="">All Status</option>
                @foreach (var s in (IEnumerable<string>)ViewBag.Statuses)
                {
                    <option value="@s">@s</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <input type="date" name="from" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="date" name="to" class="form-control" />
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    <table class="table table-striped table-bordered bg-white">
        <thead>
            <tr>
                <th>Title</th>
                <th>ID</th>
                <th>Category</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Date Submitted</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Title</td>
                    <td>@r.Id</td>
                    <td>@r.Category</td>
                    <td>@r.Status</td>
                    <td>@r.Priority</td>
                    <td>@r.DateSubmitted.ToShortDateString()</td>
                    <td>
                        <form method="post" asp-action="UpdateStatus" style="display:inline;">
                            <input type="hidden" name="id" value="@r.Id" />
                            <select name="newStatus" class="form-select form-select-sm">
                                <option value="Pending" selected="@(r.Status == "Pending" ? "selected" : null)">Pending</option>
                                <option value="In Progress" selected="@(r.Status == "In Progress" ? "selected" : null)">In Progress</option>
                                <option value="Completed" selected="@(r.Status == "Completed" ? "selected" : null)">Completed</option>

                            </select>
                            <button type="submit" class="btn btn-sm btn-success mt-1">Update</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
